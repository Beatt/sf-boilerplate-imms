{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .square {
            height: 25px;
            width: 25px;
            background-color: #555;
        }
    </style>
{% endblock %}

{% block body %}

    {{ render(controller('AppBundle:InstitucionEducativa\\Institucion:menu', {
        id: institucion.id
    })) }}

    <div class="section-md">
        <div class='container-fluid'>
            <div class='container'>
                <p style="color: #265c4f; font-size: 24px; font-weight: bold; text-align: center;">Detalle de Solicitud
                    de Campos Clínicos</p>

                <div style="display: flex;">
                    <p style="margin-top: 10px; font-size: 16px; font-weight: bold;">No. Solicitud: {{ solicitud.noSolicitud }}</p>
                    <div id="noSolicitud"></div>
                </div>

                <div class='row'>
                    <div class='col-md-6'>
                        <p style="margin-top: 10px; font-size: 16px; font-weight: bold;">Se autorizaron 5 de 6 campos
                            clínicos.</p>
                    </div>
                    <div class='col-md-6'>
                        <input type="text" placeholder="Buscar por.." name="search"/>
                        <button type="submit">Buscar</button>
                    </div>
                </div>

                <div class='row'>
                    <div class='col-md-12' id="listaSolicitud"></div>
                </div>

                <p style="margin-top: 10px; font-size: 16px; font-weight: bold;">Expediente</p>

                <div class='row'>
                    <div class='col-md-12' id="listaExpediente">

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
      window.SOLICITUD_PROP = {{ camposClinicos|json_encode|raw }}
      window.EXPEDIENTE_PROP = {{ expediente|json_encode|raw }}
    </script>
    <script src="{{ asset('build/detalle-campos.js') }}"></script>
{% endblock %}
