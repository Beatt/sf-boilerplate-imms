{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {#<script>
      window.name = {{ name|json_encode|raw }}
      window.INSTITUCION_PROP = {{ institucion|raw }}
    </script>#}
    <script src="{{ asset('build/valinfo.js') }}"></script>

{% endblock %}
