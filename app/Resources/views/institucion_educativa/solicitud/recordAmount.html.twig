{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/validar-info.css') }}">
{% endblock %}

{% block body %}

    {{dump(solicitud)}}

    {{ render(controller('AppBundle:InstitucionEducativa\\Institucion:menu', {
        id: institucion.id
    })) }}

    <div class="section-md">
        <div class='container-fluid'>
            <div class='container'>
                <h1 class="text-bold text-center">Registrar montos</h1>
                <div style="display: flex;">
                    <p class="text-bold mt-10">Solicitud {{ solicitud.noSolicitud }}</p>
                    <div id="noSolicitud"></div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div id="registrar-component"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
      window.INSTITUCION_PROP = {{ institucion.nombre |json_encode|raw }}
      window.AUTORIZADOS_PROP = {{ autorizado|json_encode|raw }}
      window.CARRERAS_PROP = {{ carreras|json_encode|raw }}
      window.MONTOS_PROP = {{ solicitud|json_encode|raw }}
      window.SOLICITUD_PROP = {{ solicitud.id|json_encode|raw }}
      window.ID_PROP = {{ institucion.id|json_encode|raw }}
    </script>
    <script src="{{ asset('build/registrar-montos.js') }}"></script>

{% endblock %}
