{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ render(controller('AppBundle:InstitucionEducativa\\Institucion:menu', {
        id: institucion.id
    })) }}

    <div class="section-md">
        <div class='container-fluid'>
            <div class='container'>
                <div class="row mb-20">
                    <div class="col-md-12">
                        <h1 class="text-bold text-center mb-20">Seleccionar forma de pago para solicitud</h1>
                        <p class="text-bold mt-10">Solicitud {{ solicitud.noSolicitud }}</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h3 class="mb-10"><strong>Consulta el formato de calculo de cuotas de recuperación para los campos clínicos solicitados</strong></h3>
                        <div id="detalle_campos_clinicos-component"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h3 class="mb-20"><strong>Selecciona la opción deseada para generar la referencia de Pago</strong></h3>
                        <div id="referencia_pago-component"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        window.CAMPOS_CLINICOS_PROPS = {{ camposClinicos|json_encode|raw }}
        window.ACTION = {{ path('solicitudes#seleccionar_forma_de_pago', {
            'id': institucion.id,
            'solicitudId': solicitud.id
        })|json_encode|raw }}
    </script>
    <script src="{{ asset('build/seleccionar_forma_pago.js') }}"></script>
{% endblock %}
