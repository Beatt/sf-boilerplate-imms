{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/ie.detalle.solicitud.multiple.css') }}">
{% endblock %}

{% block body %}
    {{ render(controller('AppBundle:IE\\Institucion:menu' )) }}

    <div class="section-md">
        <div class='container-fluid'>
            <div class='container'>
                <h1 class="text-bold text-center mb-20">Detalle de solicitud</h1>
                <div class="row">
                    <div class="col-md-12">
                        <p><span class="text-bold">No. solicitud:</span> {{ solicitud.noSolicitud }}</p>
                        <p class="mb-20"><span class="text-bold">Estado de la solicitud:</span> {{ solicitud.estatus }}</p>
                        <p><span class="text-bold">Se autorizarón:</span> {{ solicitud.totalCamposClinicosAutorizados}} de {{ solicitud.camposClinicos|length }} campos clínicos solicitados</p>
                    </div>
                    <div class="col-md-12">
                        <div id="detalle-solicitud-multiple-component"></div>
                    </div>
                    <div class="col-md-12">
                        <p class="text-bold mb-20">Expediente</p>
                        <div id="expediente-solicitud-multiple-component"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        window.SOLICITUD_PROP = {{ solicitud|json_encode|raw }}
    </script>
    <script src="{{ asset('build/ie.detalle.solicitud.multiple.js') }}"></script>
{% endblock %}

