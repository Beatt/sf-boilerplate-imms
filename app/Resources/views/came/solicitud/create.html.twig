{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/came_solicitud_index.css') }}">
    <style>
        .square {
            height: 25px;
            width: 25px;
            background-color: #555;
        }
        .wrapper-came{
            margin-top: 80px;
            margin-bottom: 80px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class='container-fluid wrapper-came'>
        <div class="container">
            <div class='row'>
                <div class='col-md-12'>
                    <h1 style="text-align: center; padding-bottom: 40px">Nueva solicitud</h1>
                </div>
            </div>
            <div id="solicitud-wrapper"></div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        window.INSTITUCIONES = {{ instituciones | json_encode | raw  }};
        window.UNIDADES = {{ unidades | json_encode | raw }};
    </script>
    <script src="{{ asset('build/came_solicitud_index.js') }}"></script>
{% endblock %}
