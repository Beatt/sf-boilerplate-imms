{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/came_solicitud_index.css') }}">
    <style>
        .wrapper-came{
            margin-top: 80px;
            margin-bottom: 80px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class='container-fluid  wrapper-came'>
        <div class="container">
            <div class='row'>
                <div class='col-md-12'>
                    <h1 style="text-align: center; padding-bottom: 40px">Validación de Montos de Inscripción y Colegiatura</h1>
                </div>
            </div>
            <div id="solicitud-valida-montos-wrapper"></div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        window.SOLICITUD = {{ solicitud | json_encode | raw }};
    </script>
    <script src="{{ asset('build/came_solicitud_index.js') }}"></script>

{% endblock %}
